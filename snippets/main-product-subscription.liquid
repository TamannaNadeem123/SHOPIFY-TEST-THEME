{{'main-product-subscription.css' |asset_url |stylesheet_tag}}
<div class = "subscription-box">
  <div class = "subscription-header desktop-only">
        <input type="radio" id = "subscribe" name="subscription-option" checked>
        <span class="radio-circle"></span>
        <div class="border-content">
    <h3 class="header-heading"> Subscribe & Save </h3>
  <div class="discount-offer">
  <span class="offer-amount-block">30% off </span>
    <span class="product-price">{{ product.price | money }}</span>
    {% if product.compare_at_price > product.price %}
      <span class="compare-amount">{{ product.compare_at_price | money }}</span>
    {% endif %}
    </div>
      </div>
      </div>
   <div class="subscription-header mobile-only">
      <div class="mobile-only-row-1">
   <input type="radio" id = "save" name="subscription-option" checked>
        <span class="radio-circle"></span>
    <h3 class="header-heading"> Subscribe & Save </h3>
  <span class="offer-amount-block">30% off </span>
  </div>
  <div class="prices-mobile-only">
    <span class="product-price">{{ product.price | money }}</span>
    {% if product.compare_at_price > product.price %}
      <span class="compare-amount">{{ product.compare_at_price | money }}</span>
    {% endif %}
    </div>
    </div>
    

  <ul class = "feature-list">
   <li> 
    <img src = "{{'Group 143373.svg' | asset_url}}" >
    <p>Save 30% now and 15% on repeat deliveries</p>
    </li>
    <li>
        <img src = "{{'Group 143373.svg' | asset_url}}" >
      <p> Cancel, skip & change anytime </p> 
    </li>
    <li>
        <img src = "{{'Group 143373.svg' | asset_url}}" >
        <p> Free shipping on every order </p>
    </li>
    <li>
        <img src = "{{'Group 143373.svg' | asset_url}}"  >
        <p> Satisfaction guaranteed </p>
    </li>
  </ul>
  <div class = "custom-select-wrapper">
  <p class="select-content"> Deliver every 4 weeks </p>
  <span class = "drop-down-icon">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M7 10l5 5 5-5" stroke="#000000" stroke-width="2.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
</svg>
  </span>
    </div>
    </div>
    <div class ="purchase-options">
    <div class="purchase-options-content">
        <input type="radio" id ="onetime" name ="purchase">
        <label for="onetime" class="one-time-purchase">One-Time Purchase</label>
        </div>
        <span class ="one-time-price">{{product.compare_at_price |money}}</span>
    </div>

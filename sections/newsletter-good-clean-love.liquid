{{ 'newsletter-good-clean-love.css' |asset_url |stylesheet_tag }}
<div class="newsletter-wrapper" style="padding: 60px 0;">
  <div class="page-width">
    <div class="newsletter-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
      {% if section.settings.show_signup %}
        <form method="post" id="contact_form" class="newsletter-form">
          <input type="email" name="contact[email]" placeholder="Email Address" required>
          <a
            href="{{ section.settings.button_url }}"
            style="background-color:{{ section.settings.background_color }};"
            class="newsletter-button"
          >
            {{ section.settings.button_text }}
          </a>
        </form>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_signup",
      "label": "Enable Email Signup",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get 10% Off Your First Order"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "Sign up to our newsletter and stay up to date"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
     {
      "type": "url",
      "id": "button_url",
      "label": "Button Link",
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f7f7f7"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Section"
    }
  ]
}
{% endschema %}

{{ 'sliding-image-gallery.css' | asset_url | stylesheet_tag }}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<div
  class="sliding-image-gallery"
  style="
    {% if section.settings.background_type == 'image' and section.settings.url != blank %}
      background-image: url('{{ section.settings.url | image_url: width: section.settings.url.width }}');
      background-size: cover;
      background-repeat: no-repeat;
    {% elsif section.settings.background_type == 'color' and section.settings.color != blank %}
      background-color: {{ section.settings.color }};
    {% endif %}
  "
>
  <div class="sliding-image-container">
  <div class="shop-collections">
    <h1>{{ section.settings.heading }}</h1>
    <div class="shop-collections-bottom">
      <a href="{{section.settings.button_url }}">{{ section.settings.button_text }}</a>
      <div class="nav-desktop-buttons">
        <div class="custom-prev">
          <svg width="28" height="28" viewBox="0 0 30 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.292893 7.29289C-0.0976314 7.68341 -0.0976315 8.31658 0.292892 8.7071L6.65685 15.0711C7.04738 15.4616 7.68054 15.4616 8.07107 15.0711C8.46159 14.6805 8.46159 14.0474 8.07107 13.6569L2.41421 8L8.07107 2.34314C8.46159 1.95262 8.46159 1.31945 8.07107 0.92893C7.68054 0.538406 7.04738 0.538406 6.65686 0.92893L0.292893 7.29289ZM30 7L1 7L1 9L30 9L30 7Z" fill="#3E6D3D"/>
          </svg>
        </div>
        <div class="custom-next">
          <svg width="28px" height="28px" viewBox="0 0 30 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M29.7071 8.70711C30.0976 8.31658 30.0976 7.68342 29.7071 7.29289L23.3431 0.928932C22.9526 0.538408 22.3195 0.538408 21.9289 0.928932C21.5384 1.31946 21.5384 1.95262 21.9289 2.34315L27.5858 8L21.9289 13.6569C21.5384 14.0474 21.5384 14.6805 21.9289 15.0711C22.3195 15.4616 22.9526 15.4616 23.3431 15.0711L29.7071 8.70711ZM0 9H29V7H0V9Z" fill="#3E6D3D"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
  <div class="swiper my-custom-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="category-card-image">
            <img src="{{ block.settings.slide_image | image_url: width: 308}}">
          </div>
          <div class="category-card-description">
            <h4>{{ block.settings.image_text }}</h4>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="nav-buttons nav-mobile-buttons">
    <div class="custom-prev">
      <svg width="28" height="28" viewBox="0 0 30 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0.292893 7.29289C-0.0976314 7.68341 -0.0976315 8.31658 0.292892 8.7071L6.65685 15.0711C7.04738 15.4616 7.68054 15.4616 8.07107 15.0711C8.46159 14.6805 8.46159 14.0474 8.07107 13.6569L2.41421 8L8.07107 2.34314C8.46159 1.95262 8.46159 1.31945 8.07107 0.92893C7.68054 0.538406 7.04738 0.538406 6.65686 0.92893L0.292893 7.29289ZM30 7L1 7L1 9L30 9L30 7Z" fill="#3E6D3D"/>
      </svg>
    </div>
    <div class="custom-next">
      <svg width="28px" height="28px" viewBox="0 0 30 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M29.7071 8.70711C30.0976 8.31658 30.0976 7.68342 29.7071 7.29289L23.3431 0.928932C22.9526 0.538408 22.3195 0.538408 21.9289 0.928932C21.5384 1.31946 21.5384 1.95262 21.9289 2.34315L27.5858 8L21.9289 13.6569C21.5384 14.0474 21.5384 14.6805 21.9289 15.0711C22.3195 15.4616 22.9526 15.4616 23.3431 15.0711L29.7071 8.70711ZM0 9H29V7H0V9Z" fill="#3E6D3D"/>
      </svg>
    </div>
  </div>
        </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
{% schema %}
{
  "name": "Sliding Image Gallery",
  "settings": [
    {
      "type": "select",
      "id": "background_type",
      "label": "Choose Your Background",
      "default":"color",
      "options": [
        {
          "label": "Color",
          "value": "color"
        },
         {
          "label": "Image",
          "value": "image"
        }
      ],
    },  {
      "type": "image_picker",
      "id": "url",
      "label": "Choose Image"
    }, {
      "type": "color",
      "id": "color",
      "label": "Choose Color",
      "default": "#644535"
    },
      {
      "type":"text",
      "id":"heading",
      "label":"Enter Heading for this section"
      },
     {
      "type":"url",
      "id":"button_url",
      "label":"Enter link for the button"
      },
     {
      "type":"text",
      "id":"button_text",
      "label":"Enter text for the button"
      },
  ],
"blocks": [
  {
    "type": "Image",
    "name": "Carrousel Image Slides",
    "settings": [
      {
        "type": "image_picker",
        "id":"slide_image",
        "label": "Choose your slide Image",
      },
      {
        "type":"text",
        "id": "image_text",
        "label": "Write text below image"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Sliding Image Gallery"
    }
  ]
}
{% endschema %}
<script>
   var swiper3 = new Swiper(".my-custom-swiper", {
    slidesPerView: 1.1,  
    spaceBetween: 15,
    loop: true,
    navigation: {
      prevEl: ".custom-prev",
      nextEl: ".custom-next",
      enabled: true,
    },
    breakpoints: {
      400: {
        slidesPerView: 1.2,
        spaceBetween: 15,
      },
      600: {
        slidesPerView: 2.2,
        spaceBetween: 15,
      },
      768: {
        slidesPerView: 3.3,
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 3.5,
        spaceBetween: 25,
      },
      1440: {
        slidesPerView: 4.2,
        spaceBetween: 25,
      },
      1920: {
        slidesPerView: 5,
        spaceBetween: 25,
      },
      2560: {
        slidesPerView: 5.5,
        spaceBetween: 20,
      }
    }
  });
</script>

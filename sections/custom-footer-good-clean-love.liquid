<script>
  function toggleFooter(headerDiv) {
    let clickedColumn = headerDiv.parentElement;
    let allColumns = document.getElementsByClassName('footer-column');
    for (let i = 0; i < allColumns.length; i++) {
     let column = allColumns[i];
      let icon = column.querySelector('.toggle-icon');
      if (column === clickedColumn) {
        if (column.classList.contains('active')) {
          column.classList.remove('active');
          if (icon) icon.textContent = '+';
        } else {
          column.classList.add('active');
          if (icon) icon.textContent = '−';
        }
      } else {
        column.classList.remove('active');
        if (icon) icon.textContent = '+';
      }
    }
  }
</script>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
> 
{{'slider-testimonials.css' | asset_url | stylesheet_tag }}

<div class="testimonials-slider">
  <div class="slider-container">
    <div class="slider-wave-image desktop-only">
      <img src="{{ section.settings.section_image | image_url}}">
    </div>
    <div class="slider-wave-image mobile-only">
       <img src="{{ section.settings.section_image | image_url}}">
    </div>
  <div class="swiper testimonials-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="testimonial-card">
            <div class="review">"{{ block.settings.review | newline_to_br }}"</div>
            <div class="author">{{ block.settings.author }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

{% schema %}
{
  "name": "Testimonials Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Choose Section Image"
    }    
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "review",
          "label": "Testimonial Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Testimonials Slider"
    }
  ]
}
{% endschema %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".testimonials-swiper", {
      loop: true,
      slidesPerView: 1.3,
      centeredSlides: true,
      spaceBetween: 20,
      speed: 600,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false
      },
        pagination: {
        clickable:true,
       el: ".swiper-pagination"
        },
      allowTouchMove: true,
      breakpoints: {
        320: {
          slidesPerView: 1.3,
           centeredSlides: true,
        },
        on:{
          resize: function(){
            this.update();
          }
        }
      }
    });
  });
</script>
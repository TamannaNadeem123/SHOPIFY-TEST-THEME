{{ 'insta-follow.css'|asset_url|stylesheet_tag }}

<div class = "social-wrapper MysocialSwiper">
  <div class ="wrapper-content">
    <h2>{{section.settings.heading }}</h2>
  </div>
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class ="swiper-slide">
        <div class ="sliding-cards">
          <img src = "{{block.settings.image |image_url: width: block.settings.image.width, height:block.settings.image.height}}">
        </div>
      </div>
     {% endfor %}
</div>
  <div class = "ending-text">
    <p>{{ section.settings.content }}</p>
  </div>
</div>

{% schema %}
  {
    "name": "Social Follow",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Choose Heading"
      },
       {
        "type": "url",
        "id": "link",
        "label": "Enter Content Link to redirect"
      },
      {
        "type": "text",
        "id": "content",
        "label": "Enter Content at the bottom"
      },
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image for slide"
          }
        ]
      }
        ],
    "presets": [
      {
        "name": "Social-Follow"
      }
    ]
  }
{% endschema %}
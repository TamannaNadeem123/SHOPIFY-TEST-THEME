{{ 'best-sellers.css' | asset_url | stylesheet_tag }}
<div class="best-sellers">
  <div class="best-sellers-container">
  <div class="header-row">
    <h2>{{ section.settings.heading }}</h2>
    <a href="{{ section.settings.shop_all_link }}">{{ section.settings.shop_all_text }}</a>
  </div>

  <div class="product-row">
    {% for block in section.blocks %}
      <div class="product-card">
        <div class="product-image-wrapper">
          <img
            src="{{ block.settings.image | image_url: width: block.settings.image.width, height: block.settings.image.height }}"
            class="main-image"
          >
          {% if block.settings.hover_image %}
            <img
              src="{{ block.settings.hover_image | image_url: width: block.settings.hover_image.width, height:  block.settings.hover_image.height }}"
              class="hover-image"
            >
          {% endif %}
        </div>
        <h3>{{ block.settings.heading | newline_to_br }}</h3>
        <p>{{ block.settings.description }}</p>
        <div class="product-reviews">
          <span class="stars">★★★★★</span>

          <span class="rating-score">{{ block.settings.rating_score }}</span>
          <span class="review-count">{{ block.settings.review_count }}</span>
        </div>
        <div class="price-button-wrap">
          <span class="product-price">${{ block.settings.price }}</span>
          <a href="{{ block.settings.add_to_cart_url }}" class="add-to-cart">SHOP NOW</a>
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</div>

{% schema %}
  {
  "name": "Best Sellers",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Best Sellers"
    },
    {
      "type": "url",
      "id": "shop_all_link",
      "label": "Shop All Link"
    },
    {
      "type": "text",
      "id": "shop_all_text",
      "label": "Shop All Button Text",
      "default": "Shop All Products"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Product Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Product Description"
        },
        {
          "type": "text",
          "id": "rating_score",
          "label": "Rating Score",
          "default": "5.0"
        },
        {
          "type": "text",
          "id": "review_count",
          "label": "Review Count",
          "default": "(335 Reviews)"
        },
        {
          "type": "url",
          "id": "add_to_cart_url",
          "label": "Add to Cart URL"
        },
         {
          "type": "text",
          "id": "price",
          "label": "Product Price"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
    "name": "Best Sellers Section",
  }
  ]
}
{% endschema %}

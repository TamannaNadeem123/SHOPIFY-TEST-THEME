{{ 'custom-contact-form.css' | asset_url | stylesheet_tag }}
<div class="contact-us-section">
  <div class = "contact-us-background">
    <div class ="back-desktop-only">
      <img src = "{{section.settings.desktop_img |image_url: width: section.settings.desktop_img.width, height: section.settings.desktop_img.height }}">
    </div>
     <div class ="back-mobile-only">
      <img src = "{{section.settings.mobile_img |image_url: width: section.settings.mobile_img.width, height: section.settings.mobile_img.height  }}">
    </div>
  </div>
  <div class="contact-us-form-container page-width">
    <div class="left-side-content-column">
      <h2>{{ section.settings.heading }}</h2>
      <div class = "contact-form-column-content">
      <p>{{ section.settings.content | newline_to_br }}</p>
       <p>{{ section.settings.column_content | newline_to_br }}</p>
      </div>
      <div class="form-style">
        {% form 'contact' %}
          {{ form.errors | default_errors }}
          <div class="form-field">
            <label class="contact-form__label" for="name">Name</label>
            <span class="required">*</span>
            <input type="text" name="contact[full_name]" id="full-name">
          </div>
          <div class="form-field">
            <label class="contact-form__label" for="email">Email</label>
            <span class="required">*</span>
            <input type="email" name="contact[email]" id="email">
          </div>
          <div class="form-field">
            <label class="contact-form__label" for="order-number">Web Order# </label>
            <span class="required">*</span>
            <input type="text" name="contact[order_number]" id="web-order-number">
          </div>

          <div class="form-field">
            <label class="contact-form__label" for="message">Message</label>
            <span class="required">*</span>
            <textarea name="contact[body]" id="message"></textarea>
          </div>

          <div class="submit">
            <a href="{{ section.settings.url}}">{{ section.settings.text }}</a>
          </div>
        {% endform %}
      </div>
    </div>
    <div class="right-image-side">
      <img
        class="desktop-image-only"
        src="{{ section.settings.image |image_url: width: section.settings.image.width, height: section.settings.image.height }}"
      >
      <img
        class="mobile-image-only"
        src="{{ section.settings.mobile_image |image_url: width: section.settings.mobile_image.width, height: section.settings.mobile_image.height }}"
      >
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Custom Contact Form",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Insert Heading for Contact Form",
      "default": "Contact"
    },
     {
      "type": "image_picker",
      "id": "mobile_img",
      "label": "Choose Mobile BG Image for Contact Form",

    },
    {
      "type": "image_picker",
      "id": "desktop_img",
      "label": "Choose Desktop BG Image for Contact Form",

    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Insert content for Contact Form",
    },
    {
      "type": "textarea",
      "id": "column_content",
      "label": "Insert content for Contact Form",
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Choose Image for Contact Form",

    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Choose Mobile Image for Contact Form",

    },
     {
      "type": "url",
      "id": "url",
      "label": "Paste Link",
    },
     {
      "type": "text",
      "id": "text",
      "label": "Choose Text for button",
       "default": "Submit"
    }
  ],
  "presets": [
    {
      "name": "Custom Contact Form"
    }
  ]

}
{% endschema %}

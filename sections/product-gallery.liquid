{{'figma-feature-product.css' |asset_url |stylesheet_tag}}

<div class ="figma-feature-section">
   <div class ="thumbnails">
      {% for image in product.images limit:5 %}
        <img class="custom-thumbnail-img" src = "{{ image | img_url:'small' }}">
      {% endfor %}
    </div>
  <div class ="product-image">
    <img class="product-main-img" src ="{{ product.featured_image |img_url: 'medium' }}">  
     </div>
    <div class="content">
      <h2 class ="product-info">{{ product.title }}</h2>
      <div class="price">
      <span class ="current-price">{{ product.price |money_with_currency }} </span>
      {% if product.compare_at_price > product.price %}
        <span class ="compare-price">{{ product.compare_at_price |money_with_currency }}</span>
      {% endif %}
      <div class ="discount-box">
        <span class="offer-amount">30% OFF</span>
    </div>
    </div>
</div>
</div>
{% schema %}
  {
    "name": "Product Gallery",
    "settings": [
     
    ],
    "presets": [
      {
        "name": "Figma Feature Product Implementation"
      }
    ]
  }
{% endschema %}